{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
  },
  "include": [
    "./api/",
    "./*.js",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/index.d.ts",
    "test/**/*.ts",
    "config/**/*",
    "models/**/*.ts"
  ],
}
